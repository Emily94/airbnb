  <h1>Add your listing:</h1>

    <% if @listing.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@listing.errors.count, "error") %> prohibited
            this listing from being saved:
          </h2>
          <ul>
            <% @listing.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <%= form_with scope: :listings, url: listings_path, local: true do |form| %>
      <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </p>
      <p>
        <%= form.label :property_type %><br>
      <%= form.text_field :property_type %>
      </p>
      <p>
        <%= form.label :property_description %><br>
      <%= form.text_field :property_description %>
      </p>
        <%= form.label :maximum_guests %><br>
        <%= form.select :max_guest_number, (0..20) %>
      </p>
      <%= form.label :select_country %><br>
     <%= form.country_select :country %>
      </p>
      <p>
        <%= form.label :city %><br> 
        <%= form.text_field :city %>
      </p>
      <p>
          <%= form.label :price_per_night %><br>
        <%= form.number_field :price %>
      </p>

      <p>
        <%= form.submit class: 'btn btn-success' %>
      </p>
  <% end %>
<% end %>